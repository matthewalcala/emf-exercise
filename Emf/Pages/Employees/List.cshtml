@page
@model Emf.Pages.Employees.ListModel
@{
    ViewData["Title"] = "List";
}

<h2>Employees</h2>

<br />
<form method="get">
    <div class="row form-group">
        <div class="col-sm-4">
            <select asp-for="DeptId"
                    asp-items="@(new SelectList(Model.Departments,"Id","Name"))" class="form-control">
                <option>View all Departments</option>
            </select>
        </div>
        <div class="col-sm-8"><button class="btn btn-default">Apply Filter</button></div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Department</th>
            <th scope="col">View/Edit/Delete</th>
        </tr>
    </thead>
    @foreach (var employee in Model.Employees)
    {
        <tr>
            <td>@employee.FirstName @employee.LastName</td>
            <td>@employee.Department.Name</td>
            <td>
                <a class="btn btn-sm"
                   asp-page="./Detail"
                   asp-route-id="@employee.Id">
                    <i class="glyphicon glyphicon-search"></i>
                </a>
                <a class="btn btn-sm"
                   asp-page="./Edit"
                   asp-route-id="@employee.Id">
                    <i class="glyphicon glyphicon-edit"></i>
                </a>
                <a class="btn btn-sm"
                   asp-page="./Delete"
                   asp-route-id="@employee.Id">
                    <i class="glyphicon glyphicon-trash"></i>
                </a>
            </td>
        </tr>
    }

</table>

<a asp-page=".\Edit" class="btn btn-primary">Add a New Employee</a>
